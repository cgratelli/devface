<!DOCTYPE html>
<html>
<head>
  <title>DevFace</title>
  <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap-responsive.min", :media => "all" %>  
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
 
  
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">

				<!-- .btn-navbar is used as the toggle for collapsed navbar content -->
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>

				<!-- Be sure to leave the brand out there if you want it shown -->
				<%= link_to 'DevFace', '/', :controller => 'home', :class => 'brand' %>

				<!-- Everything you want hidden at 940px or less, place within here -->
				<div class="nav-collapse collapse">
					<!-- .nav, .navbar-search, .navbar-form, etc -->
					<ul class="nav">
						<li class="<%= @ishome ? @ishome : '' %>">
							<%= link_to 'Inicio', '/', :controller => 'home' %>
						</li>						
						<% if current_user %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								Bandas
								<b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li class="<%= @isbanda ? @isbanda : '' %>">
									<%= link_to 'Busca Bandas', bands_path, :tabindex => "-1" %>
								</li>
								<li class="<%= @isnewbanda ? @isnewbanda : '' %>">
									<%= link_to 'Mi Banda', new_band_path, :tabindex => "-1" %>
								</li>
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								Locales
								<b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li class="<%= @islocal ? @islocal : '' %>">
									<%= link_to 'Agregar Locales', new_local_path, :tabindex => "-1" %>
								</li>
								<li class="<%= @islistlocal ? @islistlocal : '' %>">
									<%= link_to 'Mostrar Locales', locals_path, :tabindex => "-1" %>
								</li>
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								Conciertos
								<b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li class="<%= @islocal ? @islocal : '' %>">
									<%= link_to 'Agregar concierto', new_concert_path, :tabindex => "-1" %>
								</li>
								<li class="<%= @islistlocal ? @islistlocal : '' %>">
									<%= link_to 'Mostrar Conciertos', concerts_path, :tabindex => "-1" %>
								</li>
							</ul>
						</li>
						<% else %>
						<li class="<%= @isbanda ? @isbanda : '' %>">
							<%= link_to 'Bandas', bands_path %>
						</li>
						<% end %>
					</ul>
					<ul class="nav pull-right">						
						<% if current_user %>
						<li>
							<a href="">Bienvenido: <strong><%= current_user.name %></strong>!</a>
						</li>
						<li>
							<%= link_to "Sign out", signout_path, id: "sign_out" %>
						</li>								
						<% else %>
						<li>
							<%= link_to "Ingresar", "/sign", id: "sign_in" %>		
						</li>
						<li>
							<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
						</li>
						<% end %>						
					</ul>
				</div>

			</div>
		</div>
	</div>

	<div class="container-fluid">
		<%= yield %>
	</div>


</body>
</html>
